.ec_tool li a div.alert_note{
	display:block;
	width:150px;
	height:auto;
	position:absolute;
	top:5px;
	right:50px;
	clear:both;
	}

.ec_tool li a div.alert_note li.fl{
	width:116px;
	height:auto;
	border:1px #fff9d7 solid;
	float:left;
	padding:10px;
	color:#b29326;
	line-height:18px;
	background:#fff9d7;	
	}

.ec_tool li a div.alert_note li.fr{
	width:5px;
	height:9px;
	background:url(images/bg_alert_note.png) no-repeat;
	border:0;
	margin:7px 0 0 -1px;
	}

.ec_tool li a div.alert_note .alert_close{
	width:9px;
	height:7px;
	background:url(images/btn_alert_close.gif) no-repeat;
	position:absolute;
	top:8px;
	right:20px;
	}